{
  "name": "cerebral-addons",
  "version": "0.1.0",
  "description": "An actions and factories utility belt for Cerebral",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint src test",
    "dev": "parallelshell 'babel src --watch --out-dir lib' 'watch --wait=2 \"eslint src test && mocha --compilers js:babel/register --recursive --reporter dot\" src test'",
    "prebuild": "npm run lint",
    "build": "babel src --out-dir lib",
    "pretest": "npm run lint",
    "test": "mocha --compilers js:babel/register --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christianalfoni/cerebral-addons.git"
  },
  "keywords": [
    "cerebral",
    "actions"
  ],
  "author": "Christian Alfoni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/christianalfoni/cerebral-addons/issues"
  },
  "homepage": "https://github.com/christianalfoni/cerebral-addons#readme",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.1",
    "chai": "^3.2.0",
    "eslint": "^1.3.1",
    "mocha": "^2.3.2",
    "parallelshell": "^2.0.0",
    "watch": "^0.16.0"
  }
}
